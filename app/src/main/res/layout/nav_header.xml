<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="top|right"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView_selected"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_nav_movies"/>

    <ImageView
        android:id="@+id/imageView_first"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_nav_anime"/>

    <ImageView
        android:id="@+id/imageView_second"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_nav_books"/>

    <ImageView
        android:id="@+id/imageView_third"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_nav_series"/>

</LinearLayout>
